    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/red"
        android:id="@+id/red8"
        android:scaleType="fitCenter"
        android:scaleX=".7"
        android:scaleY=".7"
        android:layout_alignTop="@+id/red7"
        android:layout_alignLeft="@+id/red5"
