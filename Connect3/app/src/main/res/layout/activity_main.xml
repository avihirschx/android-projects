        android:onClick="col1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow"
        android:id="@+id/yellow8"
        android:scaleType="fitCenter"
        android:scaleX=".7"
        android:scaleY=".7"
        android:layout_alignTop="@+id/red7"
        android:layout_alignLeft="@+id/red5"
        android:layout_alignStart="@+id/red5"
        android:onClick="col2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow"
        android:id="@+id/yellow9"
        android:scaleType="fitCenter"
        android:scaleX=".7"
        android:scaleY=".7"
        android:layout_marginRight="-20dp"
